#:include editor.kv
#:include cmdpane.kv
#:include workbench.kv
# :import util util
<UncrumpledWindow>:
    padding: 10,10,10,10
    workbench: workbench
    commandpane: commandpane

    Workbench:
        canvas.before:
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        id: workbench
        size_hint_x: .2
        pos_hint: ({'x': 0} if self.visible else {'right': 0})

    FloatLayout:
        size_hint_x: 1 if not root.workbench else .8
        pos_hint:{'x':.2 if root.workbench.visible else 0}
        BoxLayout:
            orientation: "vertical"
            pos_hint: {'x': 0, 'y': 0}
            orientration: 'vertical'

            UncrumpledEditor:

            BoxLayout:
                pos_hint: {'x': 0, 'y': 0}
                Button:
                    text: "a button"
                    # on_press: commandpane.visible = util.toggle(commandpane.visible)
                # CheckBox:
                    # active: root.workbench and root.workbench.visible or True
                    # on_active: root.workbench.visible = self.active
                # CheckBox:
                    # active: root.commandpane and root.commandpane.visible or True
                    # on_active: root.commandpane.visible = self.active

            Label:
                text: "staus bar"

    CommandPane:
        canvas.before:
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        id: commandpane
        size_hint_x: .2
        pos_hint: ({'right': 1} if self.visible else {'x': 1})
        pos: self.pos
        size: self.size
