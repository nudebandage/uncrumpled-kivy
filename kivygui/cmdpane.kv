<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0.7, 0.5, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        size_hint_y: None
        multiselect: False
        touch_multiselect: False
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        height: self.minimum_height

<CommandPane>:
    cmdpane: cmdpane
    searchbox: searchbox
    recycleview: recycleview
    Label:
        id: cmdpane
        size: root.size
        pos: root.pos
        text: "cmdpane"
        canvas:
            Color:
                rgba: 0,0,1,0.5
            Rectangle:
                pos: root.pos
                size: root.size
    TextInput:
        id: searchbox
        multiline: False
        on_text: root.search()
        pos: root.x, root.top - searchbox.height
        size: root.width, 35
        size_hint: None, None

    RV:
        id: recycleview
        size: self.x, searchbox.y
        size_hint_y: None
        pos: root.pos
        keyboard_on_key_down: self.do()



